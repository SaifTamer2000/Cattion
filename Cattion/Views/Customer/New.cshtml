@model Cattion.ViewModels.NewCustomerViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Create", "Customer"))
{
<div class="form-group">
    @Html.LabelFor(M => M.Customer.name)
    @Html.TextAreaFor(m => m.Customer.name, new { @class = "form-control" });
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Customer.MembershipId)
    @Html.DropDownListFor(m=>m.Customer.MembershipId,new SelectList(Model.memberships,"id","name"), "", new  { @class="form-control"})
</div>
<button type="submit" class="btn btn-primary">Save</button>
}

